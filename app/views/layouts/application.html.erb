<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@600&display=swap" rel="stylesheet"> 
<!DOCTYPE html>
<html>
  <head>
    <%= flash[:message] %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <title>Facepalm</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <nav class="options">
      <div class="positioning">
        <div class="facepalm-logo"><h2>facepalm</h2></div>
        <% if !user_signed_in?%>
          <div class="nav-object"><%= link_to 'sign_up', new_user_registration_path %>
          <%= link_to 'sign_in', new_user_session_path %>
        <% end %>
        <%= link_to 'home', root_path %>
        <%= link_to 'new_post', new_post_path %>
        <% if user_signed_in?%>
          <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
          <%= link_to "following", friend_page_path%>
          <%= link_to "My Page", you_page_path%>
          friend requests <%= current_user.user_requests.count%>
        <% end %>
      </div>
    </nav>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
    <%= link_to 'all users', users_path%>
  </body>
</html>
