<h2>hello</h2>
<% if @posts.present? %>
    <% @posts.each do |post|%>
        <div class="post">
            <div class="post-author">author: <%= post.author.username%></div>
            <div class="post-body"><%= post.body%></div>
            <div class="post-view"><%= link_to 'view post', post_path(post)%></div>
            <br>
        </div>
    <% end %>
<% end %>